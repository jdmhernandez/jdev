---
// Fundations
import Text from "@/components/fundations/elements/Text.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
// Data
const data = [
  {
    period: "Web Design",
    title: "Custom Website Development",
    description: `I create modern, responsive websites tailored to your needs. From simple portfolios to complex business sites, I blend clean design with functional code to bring your vision to life.`,
  },
  {
    period: "Photography",
    title: "Event & Portrait Photography",
    description: `Despite my busy schedule juggling gym sessions, part-time work, and side photography gigs, I capture life's special moments with creativity and attention to detail.`,
  },
  {
    period: "Consulting",
    title: "Digital Strategy & Tech Advice",
    description: `Drawing from my NAIT studies and hands-on experience, I provide guidance on digital projects, from website optimization to tech stack recommendations.`,
  },
];
---

<section>
  <Wrapper variant="standard">
    <div
      class="grid grid-cols-1 gap-4 md:grid-cols-3 border-b py-8 border-base-200"
    >
      <div class="lg:sticky lg:top-24 lg:z-40 self-start">
        <Text
          tag="h2"
          variant="textSM"
          class="text-base-900 font-bold uppercase"
        >
          What I Can Do For You
        </Text>
      </div>
      <div class="flex flex-col gap-12 lg:col-span-2">
        {
          data.map((data) => (
            <article class="group relative grid grid-cols-1 gap-4 lg:grid-cols-3 lg:items-start ">
              <div class="lg:col-span-2">
                <Text
                  tag="h3"
                  variant="textSM"
                  class="text-base-900   font-bold uppercase"
                >
                  {data.title}
                </Text>
                <Text
                  tag="p"
                  variant="textXS"
                  class=" mt-1 text-base-600        "
                >
                  {data.description}
                </Text>
              </div>
              <Text
                tag="p"
                variant="textXS"
                class="text-base-600    lg:ml-auto"
              >
                <time datetime={data.period}> {data.period}</time>
              </Text>
            </article>
          ))
        }
      </div>
    </div>
  </Wrapper>
</section>
